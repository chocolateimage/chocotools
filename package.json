{
  "name": "chocotools",
  "displayName": "Choco Tools",
  "description": "Useful tools that are developed by chocolateimage",
  "version": "0.1.4",
  "publisher": "chocolateimage",
  "engines": {
    "vscode": "^1.96.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chocolateimage/chocotools.git"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "icon": "icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [{
      "command": "chocotools.convertCJSToESM",
      "title": "Convert current file from CommonJS to ESM"
    }],
    "configuration": {
      "title": "Choco Tools",
      "properties": {
        "chocotools.runPrettier": {
          "type": "boolean",
          "default": true,
          "description": "Runs Prettier after formatting if installed",
          "scope": "language-overridable"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint ."
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.16.0"
  }
}
